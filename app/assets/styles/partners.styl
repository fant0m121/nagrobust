.b-page

	&__screen
		
		&--partners
			background-size cover
			background url('../images/partners-screen-bg.jpg') 50% 100%
			color #fff

.b-partners

	&__title
		margin: -20px -10px;
		outline:1px solid #cccccc;
		outline-offset:-10px;
		font-size: 48pt;
		text-transform: uppercase;
		width: 516px;
		height: 108px;
		background-color: rgba(0,0,0,0.6);
		padding: 10px 90px;

	&__form
		position: relative;
		margin: 120px -10px;
		-webkit-box-shadow: 3px 4px 5px rgba(0,0,0,.75);
		-moz-box-shadow: 3px 4px 5px rgba(0,0,0,.75);
		box-shadow: 3px 4px 5px rgba(0,0,0,.75);
		width: 1308px;
		height: 605px
		background-color: rgba(255,255,255,0.8);

		&--name
			-webkit-box-shadow: inset 0 0 5px rgba(0,0,0,.75);
			-moz-box-shadow: inset 0 0 5px rgba(0,0,0,.75);
			box-shadow: inset 0 0 5px rgba(0,0,0,.75);
			width: 388px;
			height: 71px;

		&--phone
			-webkit-box-shadow: inset 0 0 5px rgba(0,0,0,.75);
			-moz-box-shadow: inset 0 0 5px rgba(0,0,0,.75);
			box-shadow: inset 0 0 5px rgba(0,0,0,.75);
			width: 388px;
			height: 71px;

	&__callback
		margin: 200px 10px;
		width: 464px;
		height: 557px;
		background-color: rgba(176,225,253,1);

	&__info
		font-family: OpenSans;
		font-size: 24px;
		color: #040404;