.b-page

	&__screen
		
		&--calc
			background #6ac0f3
			color #fff
		
.b-calc
	position relative
	height 100%
	
	&__title
		text-transform uppercase
		font-size 50px
		font-size 5vh
		line-height 1

	&__content
		padding 10vh 0 5vh
		display flex
	
	&__footer
		margin-bottom 25px

	&__form
		flex: 0 0 45%
		padding 0 5% 0 0
	
	&__line
		display flex
		align-items center
		justify-content space-between
		margin-bottom 25px
	
	&__label
		font-size 36px
		font-size 2.5vh
		line-height 1
		text-transform uppercase
	
	&__input
		color #787878
		font-size 48px
		font-size 3vh
		padding 10px
		width 100px
		text-align center
		box-shadow inset 0 0 9px rgba(0,0,0,.75)
		border-radius 1px/5px
		background-color #fff
		border 0
		
		&:focus
			outline: 0

	&__result
		font-size 60px
		font-size 5vh
	
	&__scroll
		position absolute
		right 70px
		bottom 70px
		display flex
		
	&__prim
		position absolute
		left 70px
		bottom 70px
		font-size 36px
		line-height 145px
		
.b-button
	
	&--calc
		font-size 60px
		font-size 5vh
		text-decoration none
		background #f7f74a
		border-radius 4px
		padding 10px 40px
		color #fff
		margin-left 300px